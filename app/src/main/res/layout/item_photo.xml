<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Contenedor de imagen con overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Foto"
                android:background="#F0F0F0" />

            <!-- Badge de GPS en la esquina -->
            <TextView
                android:id="@+id/tvGpsBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:background="@drawable/badge_background"
                android:padding="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="ðŸ“ GPS"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:visibility="gone" />
        </FrameLayout>

        <!-- InformaciÃ³n con mejor diseÃ±o -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <!-- Nombre del archivo -->
            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nombre_archivo.jpg"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- UbicaciÃ³n GPS -->
            <LinearLayout
                android:id="@+id/layoutGps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="19.123456, -96.123456"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Fecha y hora -->
            <LinearLayout
                android:id="@+id/layoutDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“…"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2025:10:31 22:30:45"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Mensaje de error o sin GPS -->
            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="âš  Sin geolocalizaciÃ³n"
                android:textSize="12sp"
                android:textColor="#FF9800"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>